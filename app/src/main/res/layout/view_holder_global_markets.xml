<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtGlobalInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Top market cap:" />

    <TextView
        android:id="@+id/txtGlobalInfoValue"
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black_50"
        app:layout_constraintStart_toEndOf="@+id/txtGlobalInfoTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$7800.02" />

    <TextView
        android:id="@+id/txtGlobalInfoChange"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/green_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="%7800.02" />

</androidx.constraintlayout.widget.ConstraintLayout>
